

{
  "compilerOptions": {
    "target": "ESNext",               
    "lib": ["ES6", "ES5"],            
    "module": "CommonJS",             
    "moduleResolution": "node",       
    "rootDir": "./src",              
    "outDir": "./dist",               
    "esModuleInterop": true,          
    "emitDecoratorMetadata": true,    
    "experimentalDecorators": true,   
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                   
    "skipLibCheck": true,            
    "allowJs": true                   
  },
  "include": ["src/**/*"],            
  "exclude": ["node_modules"]         
}
